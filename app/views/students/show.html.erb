<div class="panel panel-default">
  <div class="panel-body">
    <h1 class="text-center"><%= @student.nickname %> (<%= @student.family_name %>, <%= @student.given_name %>)</h1>
  </div>
  <div class="row">
    <% @semesters.each do |semester| %>
      <div class="col-md-11 col-md-offset-1">
        <div class="row">
          <div class="col-md-6">
            <h3 class="text-center text-primary"><%= semester.name %></h4>
            <div class="row">
              <div class="col-md-4 col-md-offset-2">
                <h4 class="text-danger">Absences</h4>
                <% semester.daily_grades.where(attendance: 2).each do |absent| %>
                  <p><%= absent.classdate.strftime("%m/%d %a") %></p>
                <% end %>
              </div>
              <div class="col-md-4">
                <h4 class="text-warning">Lates</h4>
                <% semester.daily_grades.where(attendance: 1).each do |late| %>
                  <p><%= late.classdate.strftime("%m/%d %a") %></p>
                <% end %>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <h3 class="text-primary">Grade Averages</h3>
            <h4>Homework: <%= avg_homework(semester.daily_grades) %>%</h4>
            <h4>Participation: <%= avg_participation(semester.daily_grades) %>%</h4>
            <h4>Quizzes: <%= semester.daily_grades.average(:quiz).to_i %>%</h4>
            <h4>Midterm/Final: <%= semester.daily_grades.average(:exam).to_i %>%</h4>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-body">
    <div class="col-md-4 col-md-offset-4">
      <div class="btn-group btn-group-justified">
        <%= link_to "Check Record", { :controller => "daily_grades", :action => "index", :student => @student.id }, class: "btn btn-primary" %>
        <%= link_to "Current Course", @current_course, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
