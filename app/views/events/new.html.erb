<h1 class="text-center">Add an Event</h1>
<div class="panel panel-default">
  <div class="panel-body">
    <br>
    <%= simple_form_for @event, html: { class: 'form-vertical' } do |f| %>
      <div class="col-md-12">
        <div class="row">
          <div class="col-md-5">
            <%= f.input :name %>
          </div>
          <div class="col-md-5">
            <br>
            <%= f.label :eventdate %>
            <%= f.text_field :eventdate, data:{ provide: 'datepicker' }, class: 'small-text-field event-datepicker' %><br>
          </div>
          <div class="col-md-2">
            <br>
            <%= f.button :submit, class: ' btn btn-success' %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-2 col-md-offset-10">
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
