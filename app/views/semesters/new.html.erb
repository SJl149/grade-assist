<h1 class="text-center">Create a Semester Schedule</h1>
<div class="panel panel-default">
  <div class="panel-body">
    <br>
    <%= simple_form_for @semester, html: { class: 'form-vertical' } do |f| %>
      <%= f.input :name %>
      <div class="col-md-12">
        <div class="row">
          <div class="col-md-6">
            <%= f.label :start_date %><br>
            <%= f.text_field :start_date, data:{ provide:'datepicker' }, class: 'small-text-field datepicker' %><br>
            <%= f.label :end_date %><br>
            <%= f.text_field :end_date, data:{ provide:'datepicker' }, class: 'small-text-field datepicker' %><br>
          </div>
          <div class="col-md-6">
            <div id="holidays">
              <%= f.simple_fields_for :holidays do |holiday| %>
                <%= render 'holiday_fields', f: holiday %>
                <%= link_to_add_association 'add holiday', f, :holidays, class: 'btn btn-success' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-12">
        <%= f.button :submit, class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
