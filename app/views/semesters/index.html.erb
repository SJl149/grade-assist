<h1 class="text-center">Semester#index</h1>

<%= month_calendar events: @semesters do |date, semesters| %>
  <%= date.strftime("%-m/%-d") %>

  <% semesters.each do |semester| %>
    <div>
      <p><%= semester.name %></p>
    </div>

  <% end %>

  <% semesters.each do |semester| %>
    <% semester.holidays.each do |holiday| %>
      <div>
        <p><%= holiday.period %></p>
      </div>
    <% end %>
  <% end %>
<% end %>
