<h1 class="text-center"><%= @course.name %></h1>
<table class="table table-striped table-hover">
  <thead>
    <tr class="info">
      <th>Students</th>
      <th>Official Name</th>
      <th>Attendance</th>
      <th>Participation</th>
      <th>Homework</th>
      <th>Quizzes</th>
      <th>Comments</th>
    </tr>
  </thead>
  <tbody>
    <% @course.students.each do |student| %>
      <tr>
        <td><%= student.nickname %></td>
        <td><%= student.name %></td>
        <th>L: 2, A: 1</th>
        <th>100%</th>
        <th>95%</th>
        <th>90%</th>
        <th><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></th>
      </tr>
    <% end %>
  </tbody>
</table>
