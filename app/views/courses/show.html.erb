<h1 class="text-center"><%= @course.name %></h1>
<table class="table table-striped table-hover">
  <thead>
    <tr class="info">
      <th>Students</th>
      <th>Legal Name</th>
      <th>Attendance</th>
      <th>Participation</th>
      <th>Homework</th>
      <th>Quizzes</th>
      <th>Comments</th>
    </tr>
  </thead>
  <tbody>
    <% @course.students.each do |student| %>
      <tr>
        <td><%= student.nickname %></td>
        <td><%= student.name %></td>
        <td>L: 2, A: 1</td>
        <td>100%</td>
        <td>95%</td>
        <td>90%</td>
        <td><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></td>
      </tr>
    <% end %>
  </tbody>
</table>
