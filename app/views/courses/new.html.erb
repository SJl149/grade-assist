<h2>New Course</h2>
<hr>
<%= simple_form_for @course, html: { class: 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <p><strong>Students:</strong></p>
  <div id="students">
    <%= f.simple_fields_for :enrollments do |enrollment| %>
      <%= render 'enrollment_fields', f: enrollment %>
      <%= link_to_add_association 'Add student', f, :enrollments, class: 'btn btn-success' %>
    <% end %>
  </div>
  <%= f.button :submit %>
<% end %>
