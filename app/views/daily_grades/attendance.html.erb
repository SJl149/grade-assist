<div class="panel panel-success">
  <div class="panel-heading">
    <h3 class="panel-title">Attendance for <%= @course.name %> ##Display Day##</h3>
  </div>
  <div class="panel-body">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Student</th>
          <th>Name</th>
          <th>Present</th>
          <th>Late</th>
          <th>Absent</th>
        </tr>
      </thead>
      <tbody>
        <% @course.students.each do |student| %>
          <tr>
            <td><%= student.nickname %></td>
            <td><%= student.family_name %>, <%= student.given_name %></td>
            <td><a href="#" class="btn btn-success">Present</a></td>
            <td><a href="#" class="btn btn-warning">Late</a></td>
            <td><a href="#" class="btn btn-danger">Absent</a></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
