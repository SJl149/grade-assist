<div class="panel panel-default">
  <div class="panel-body">
    <div class="col-md-6 col-md-offset-3">
      <h1 class="text-center"><%= @student.nickname %>'s Record for <%= @daily_grade.created_at.to_date.to_formatted_s(:long) %></h1>
      <%= simple_form_for @daily_grade, html: { class: 'form-horizontal' } do |f| %>
        <%= f.input :attendance, collection: DailyGrade.attendances, value_method: :first %>
        <%= f.input :participation, collection: DailyGrade.participations, value_method: :first %>
        <%= f.input :homework, collection: DailyGrade.homeworks, value_method: :first %>
        <%= f.input :quiz %>
        <%= f.input :comment %>
        <%= f.input :exam %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
