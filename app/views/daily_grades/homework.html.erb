<div class="panel panel-success">
  <div class="panel-heading">
    <h3 class="panel-title text-center">Homework: <%= @course.name %> | <%= @daily_grades_date.to_formatted_s(:long_ordinal) %></h3>
  </div>
  <div class="panel-body">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Students</th>
          <th>Status</th>
          <th>Comments</th>
          <th>Full Credit</th>
          <th>Half Credit</th>
          <th>No Credit</th>
        </tr>
      </thead>
      <tbody>
        <% @students.each do |student| %>
          <tr>
            <td><%= student.nickname %></td>
            <td><span class="<%= student.daily_grades.last.homework == 'full' ? 'label label-success' : student.daily_grades.last.homework == 'half' ? 'label label-warning' : 'label label-danger' %>"><%= student.daily_grades.last.homework %></span></td>
            <td><%= best_in_place student.daily_grades.last, :comment %></td>
            <td><%= link_to 'Full', homework_path(student_id: student, course_id: @course.id, daily_grade: { homework: :full}), method: :patch, class: "btn btn-success" %></td>
            <td><%= link_to 'Half', homework_path(student_id: student, course_id: @course.id, daily_grade: { homework: :half}), method: :patch, class: "btn btn-warning" %></td>
            <td><%= link_to 'Zero', homework_path(student_id: student, course_id: @course.id, daily_grade: { homework: :zero}), method: :patch, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
