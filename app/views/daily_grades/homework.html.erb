<div class="panel panel-success">
  <div class="panel-heading">
    <h3 class="panel-title">Homework: <%= @course.name %> | <%= Date.today.to_formatted_s(:long_ordinal) %></h3>
  </div>
  <div class="panel-body">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Students</th>
          <th>Name</th>
          <th>Full Credit</th>
          <th>Half Credit</th>
          <th>No Credit</th>
        </tr>
      </thead>
      <tbody>
        <% @course.students.each do |student| %>
          <tr>
            <td><%= student.nickname %></td>
            <td><%= student.family_name %>, <%= student.given_name %></td>
            <td><%= link_to 'Full', homework_path(student_id: student, course_id: @course.id, daily_grade: { homework: :full}), method: :patch, class: "btn btn-success" %></td>
            <td><%= link_to 'Half', homework_path(student_id: student, course_id: @course.id, daily_grade: { homework: :half}), method: :patch, class: "btn btn-warning" %></td>
            <td><%= link_to 'None', homework_path(student_id: student, course_id: @course.id, daily_grade: { homework: :zero}), method: :patch, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
