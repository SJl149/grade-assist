<div class="panel panel-default">
  <div class="panel-body">
    <h1 class="text-center"><%= @student.nickname %>'s Record</h1>
  </div>
</div>
<table class="table table-striped table-hover">
  <thead>
    <tr class="info">
      <th>Date</th>
      <th>Attendance</th>
      <th>Participation</th>
      <th>Homework</th>
      <th>Quizzes</th>
      <th>Comments</th>
      <th>Midterm/Final</th>
    </tr>
  </thead>
  <tbody>
    <% @daily_grades.each do |daily_grade| %>
      <tr>
        <td><%= link_to daily_grade.created_at.to_date.to_formatted_s(:long), edit_daily_grade_path(:id => daily_grade.id) %></td>
        <td><%= daily_grade.attendance %></td>
        <td><%= daily_grade.participation %></td>
        <td><%= daily_grade.homework %></td>
        <td><%= daily_grade.quiz %></td>
        <td><%= daily_grade.comment %></td>
        <td><%= daily_grade.exam %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="panel panel-default">
  <div class="panel-body">
    <div class="col-md-4 col-md-offset-4">
      <div class="btn-group btn-group-justified">
        <%= link_to "Student Dashboard", @student, class: "btn btn-primary" %>
        <%= link_to "Class Overview", @course, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
