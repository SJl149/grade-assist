<div class="panel panel-success">
  <div class="panel-heading">
    <h3 class="panel-title">Attendance for <%= @course.name %></h3>
  </div>
  <div class="panel-body">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Students</th>
          <th>Legal Name</th>
          <th>Attendance</th>
        </tr>
      </thead>
      <tbody>
        <% @course.students.each do |student| %>
          <tr>
            <td><%= student.nickname %></td>
            <td><%= student.name %></td>
            <td>
              <div class="btn-group btn-group-justified">
                <%= link_to "Present", class: "btn btn-success" %>
                <%= link_to "Late", class: "btn btn-warning" %>
                <%= link_to "Absent", class: "btn btn-danger" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
