<div class="panel panel-success">
  <div class="panel-heading">
    <h3 class="panel-title">Quizzes for <%= @course.name %></h3>
  </div>
  <div class="panel-body">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Students</th>
          <th>Legal Name</th>
          <th>Quizzes</th>
        </tr>
      </thead>
      <tbody>
        <% @course.students.each do |student| %>
          <tr>
            <td><%= student.nickname %></td>
            <td><%= student.name %></td>
            <td>
              <!-- Code for quiz score input -->
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
